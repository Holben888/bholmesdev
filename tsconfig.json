{
  "extends": "astro/tsconfigs/strictest",
  "include": ["src", "astro.config.mjs"],
  "compilerOptions": {
    "target": "ES2020",
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "exactOptionalPropertyTypes": false
  }
}
