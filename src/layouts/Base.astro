---
import Outlet from "../components/Outlet.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
globalThis.layoutIndex = 0
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
      rel="preload"
      href="/fonts/Atkinson/Atkinson-Hyperlegible-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous">
    <link
      rel="preload"
      href="/fonts/Atkinson/Atkinson-Hyperlegible-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous">
    <link
      rel="preload"
      href="/fonts/Atkinson/Atkinson-Hyperlegible-Italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous">
    <link
      rel="preload"
      href="/fonts/Atkinson/Atkinson-Hyperlegible-BoldItalic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous">
		<link rel="stylesheet" href="/fonts/index.css" media="print" onload="this.media='all'" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Ben</a>
				<a href="/blog">Blog</a>
			</nav>
		</header>
		<div>
			<Outlet metaUrl={import.meta.url}>
				<slot />
			</Outlet>
		</div>
	</body>
</html>

<script src="../router/main"></script>

<style is:global>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);

		--page-anim-duration: 0.2s;
	}

	* {
		box-sizing: border-box;
		position: relative;
	}

	[data-page][data-page-enter] {
		position: absolute;
		inset: 0;
		animation: fade var(--page-anim-duration) ease-in forwards;
	}
	[data-page][data-page-exit] {
		animation: fade var(--page-anim-duration) ease-out reverse;
	}

	@keyframes fade {
		from { opacity: 0 }
		to { opacity: 1 }
	}

	html {
		font-family: Atkinson, system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
	}

	h1 {
		font-size: var(--font-size-xl);
	}

	h2 {
		font-size: var(--font-size-lg);
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>

