---
import Layout from "../layouts/Base.astro";
import ColorStrip from "./_index/ColorStrip.astro";
import Heading from "./_index/Heading.astro";
import InBrief from "./_index/InBrief.md";
---

<Layout title="Ben Holmes">
  <main class="numbered-headings">
    <Heading />
    <ColorStrip />
    <numbered-section>
      <InBrief />
    </numbered-section>
  </main>
</Layout>

<style>
  numbered-section {
    display: grid;
    max-width: var(--grid-max-width);
    grid-template-columns: 1fr 1.2fr;
    column-gap: 3rem;
    row-gap: 2rem;
    padding-inline: 2rem;
    margin: auto;
  }

  numbered-section :global(section) {
    padding-block-start: 2.8rem;
  }

  numbered-section :global(blockquote) {
    margin: 0;
  }
</style>
