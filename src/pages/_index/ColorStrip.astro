<div class="grid-container">
  <div data-curr-color class="box">
    <div class="bar green"></div>
    <div class="bar orange"></div>
    <div class="bar purple"></div>
  </div>
</div>

<script>
  import { currSection } from "../../components/section.store";

  const box = document.querySelector(".box[data-curr-color]");
  currSection.subscribe((curr) => {
    let color: string;
    if (curr % 3 === 0) {
      color = "green";
    } else if (curr % 3 === 1) {
      color = "orange";
    } else {
      color = "purple";
    }
    box.setAttribute("data-curr-color", color);
  });
</script>

<style>
  .box {
    --size: 3rem;
    --bar-size: 6px;
    border: 2px solid var(--sepia-3);
    width: var(--size);
    height: var(--size);
    grid-column: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--bar-size);
    padding-inline: 8px;
    padding-block: 10px;
  }

  .bar {
    width: var(--bar-size);
    height: 100%;
    transition: transform 0.2s;
    transform-origin: top;
  }

  [data-curr-color="green"] .green,
  [data-curr-color="orange"] .orange,
  [data-curr-color="purple"] .purple {
    transform: scaleY(14);
  }
  .bar.green {
    background-color: var(--green);
  }
  .bar.orange {
    background-color: var(--orange);
  }
  .bar.purple {
    background-color: var(--purple);
  }

  .grid-container {
    display: none;
  }

  @media (min-width: 600px) {
    .grid-container {
      display: grid;
      grid-template-columns: 0.9fr 3rem 1.2fr;
      position: sticky;
      top: 1rem;
    }
  }
</style>
