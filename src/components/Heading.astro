<style>
    h1 {
        font-family: var(--font-heading);
    }
    h1.mobile {
        font-size: 10vh;
        writing-mode: vertical-rl;
    }
    ul {
        list-style: none;
        padding: 0;
    }
    li {
        margin-block: 1rem;
    }
    a, a:visited {
      text-decoration: none; 
      color: var(--text-body);
    }
</style>
