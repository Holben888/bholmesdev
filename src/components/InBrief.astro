            >
        </p>
    </div>
</Section>

<style>
    label {
        font-weight: 700; 
        cursor: pointer;
        display: grid;
        grid-template-areas:
            "personal switch"
            "recruiter switch";
        gap: 0.2em;
        align-items: center;
        justify-content: space-between;
        font-size: var(--font-size-lg);
        letter-spacing: 0.9px;
    }
    .label-personal {
        color: var(--accent);
        grid-area: personal;
    }
    .label-recruiter {
        color: var(--text-5);
        grid-area: recruiter;
    }
    .switch {
        width: 0.3em;
        height: 1em;
        border: 4px solid var(--text-5);
        border-radius: 0.6em;
        display: flex;
        justify-content: center;
        position: relative;
        grid-area: switch;
    }
    .switch:before {
        content: "";
        position: absolute;
        width: 0.8em;
        height: 0.8em;
        background-color: var(--accent);
        border-radius: 100%;
        transition: transform 0.2s;
        transform: translateY(-70%);
    }
    
    @media (min-width: 600px) {
        label {
            grid-template-areas: "personal switch recruiter";
        }
        .switch {
            transform: rotate(0.75turn);
        }
    }
    .checkbox {
        display: none;
    }

    .checkbox:checked ~ label > .label-recruiter {
        color: var(--accent);
    }

    .checkbox:checked ~ label > .label-personal {
        color: var(--text-5);
    }
    .content-personal {
        display: block;
    }
    .content-recruiter {
        display: none;
    }
    .checkbox:checked ~ .content-recruiter {
        display: block;
    }
    .checkbox:checked ~ .content-personal {
        display: none;
    }
    .checkbox:checked ~ label > .switch:before {
        transform: translateY(100%);
    }
</style>
