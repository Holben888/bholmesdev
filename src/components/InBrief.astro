  </div>
</Section>

<style>
    h2 {
        margin-block: var(--size-2);
    }

  label {
    font-weight: 700;
    cursor: pointer;
    display: grid;
    grid-template-areas:
      "personal switch"
      "recruiter switch";
    gap: 0.2em;
    align-items: center;
    justify-content: space-between;
    font-size: var(--font-size-md);
    letter-spacing: 0.9px;
    margin-block: var(--size-2);
  }
  .label-personal {
    color: var(--accent);
    grid-area: personal;
  }
  .label-recruiter {
    grid-area: recruiter;
  }
  .switch {
    width: 0.6em;
    height: 1em;
    border-radius: 0.6em;
    display: flex;
    justify-content: center;
    position: relative;
    grid-area: switch;
    border-radius: 3rem;
    border-radius: 3rem;
    background: radial-gradient(
        53.29% 50% at 50% 50%,
        rgba(209, 198, 226, 0) 0%,
        var(--surface-2) 100%
      ),
      var(--surface-3);
  }
  .switch:before {
    content: "";
    position: absolute;
    width: 0.8em;
    height: 0.8em;
    background-image: radial-gradient(
        85.1% 85.1% at 19.53% 20.31%,
        rgba(255, 255, 255, 0.4) 0%,
        rgba(76, 5, 189, 0.4) 100%
      ),
      linear-gradient(149deg, #6200ff 0%, #4c05bd 100%);
    filter: drop-shadow(0px 0.05em 0.05em rgba(22, 2, 55, 0.5))
      drop-shadow(0px 0.1em 0.1em rgba(22, 2, 55, 0.5));
    border-radius: 100%;
    transition: transform 0.2s;
    transform: translateY(-50%) rotate(50deg);
  }

  @media (min-width: 600px) {
    label {
      grid-template-areas: "personal switch recruiter";
    }
    .switch {
      transform: rotate(0.75turn);
    }
  }
  .checkbox {
    display: none;
  }

  .checkbox:checked ~ label > .label-recruiter {
    color: var(--accent);
  }

  .checkbox:checked ~ label > .label-personal {
    color: var(--text-5);
  }
  .content-personal {
    display: block;
  }
  .content-recruiter {
    display: none;
  }
  .checkbox:checked ~ .content-recruiter {
    display: block;
  }
  .checkbox:checked ~ .content-personal {
    display: none;
  }
  .checkbox:checked ~ label > .switch:before {
    transform: translateY(70%) rotate(50deg);
  }
</style>
